<div class="container">
  <div class="row">
    <h1>
      <%= @player.name %>
      <%= link_to 'edit', edit_player_path(@player), class:"btn btn-sm btn-warning" %>
      <%= link_to 'position map', edit_posmap_path(@posmap), class:"btn btn-sm btn-success" %>
      <%= link_to 'delete', player_path(@player), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger"  %>
    </h1>
  </div>
    <%= link_to 'back', 'javascript:history.back()', class:"btn btn-sm btn-secondary" %>
  <div class="row">
    <div class="col">
      <h5><%= @player.position %></h5>
      <h5><%= @player.age %> years old</h5>
    </div>
    <div class="col">
      <p>
        <% playable_positions(@posmap).each do |position| %>
          <%= position %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="row">
    <h5>ATTRIBUTES</h5>
    <div class="col">
      <% if @player.position == "GK" %>
        <h5>GOALKEEPING</h5>
        <table class="table">
          <tbody>
            <tr>
              <td>Aerial Reach</td>
              <td class="attribute <%= attribute_class(@player.aerial_reach) %>"><%= @player.aerial_reach %></td>
            </tr>
            <tr>
              <td>Command of Area</td>
              <td class="attribute <%= attribute_class(@player.command_of_area) %>"><%= @player.command_of_area %></td>
            </tr>
            <tr>
              <td>Communication</td>
              <td class="attribute <%= attribute_class(@player.communication) %>"><%= @player.communication %></td>
            </tr>
            <tr>
              <td>Eccentricity</td>
              <td class="attribute <%= reverse_attribute_class(@player.eccentricity) %>"><%= @player.eccentricity %></td>
            </tr>
            <tr>
              <td>First Touch</td>
              <td class="attribute <%= attribute_class(@player.first_touch) %>"><%= @player.first_touch %></td>
            </tr>
            <tr>
              <td>Handling</td>
              <td class="attribute <%= attribute_class(@player.handling) %>"><%= @player.handling %></td>
            </tr>
            <tr>
              <td>Kicking</td>
              <td class="attribute <%= attribute_class(@player.kicking) %>"><%= @player.kicking %></td>
            </tr>
            <tr>
              <td>One on Ones</td>
              <td class="attribute <%= attribute_class(@player.one_on_ones) %>"><%= @player.one_on_ones %></td>
            </tr>
            <tr>
              <td>Passing</td>
              <td class="attribute <%= attribute_class(@player.passing) %>"><%= @player.passing %></td>
            </tr>
            <tr>
              <td>Punching (Tendency)</td>
              <td class="attribute <%= attribute_class(@player.punching) %>"><%= @player.punching %></td>
            </tr>
            <tr>
              <td>Reflexes</td>
              <td class="attribute <%= attribute_class(@player.reflexes) %>"><%= @player.reflexes %></td>
            </tr>
            <tr>
              <td>Rushing Out (Tendency)</td>
              <td class="attribute <%= attribute_class(@player.rushing_out) %>"><%= @player.rushing_out %></td>
            </tr>
            <tr>
              <td>Throwing</td>
              <td class="attribute <%= attribute_class(@player.throwing) %>"><%= @player.throwing %></td>
            </tr>
          </tbody>
        </table>
      <% else %>
        <h5>TECHNICAL</h5>
        <table class="table">
          <tbody>
            <tr>
              <td>Corners</td>
              <td class="attribute <%= attribute_class(@player.corners) %>"><%= @player.corners %></td>
            </tr>
            <tr>
              <td>Crossing</td>
              <td class="attribute <%= attribute_class(@player.crossing) %>"><%= @player.crossing %></td>
            </tr>
            <tr>
              <td>Dribbling</td>
              <td class="attribute <%= attribute_class(@player.dribbling) %>"><%= @player.dribbling %></td>
            </tr>
            <tr>
              <td>Finishing</td>
              <td class="attribute <%= attribute_class(@player.finishing) %>"><%= @player.finishing %></td>
            </tr>
            <tr>
              <td>First Touch</td>
              <td class="attribute <%= attribute_class(@player.first_touch) %>"><%= @player.first_touch %></td>
            </tr>
            <tr>
              <td>Free Kick Taking</td>
              <td class="attribute <%= attribute_class(@player.free_kicks) %>"><%= @player.free_kicks %></td>
            </tr>
            <tr>
              <td>Heading</td>
              <td class="attribute <%= attribute_class(@player.heading) %>"><%= @player.heading %></td>
            </tr>
            <tr>
              <td>Long Shots</td>
              <td class="attribute <%= attribute_class(@player.long_shots) %>"><%= @player.long_shots %></td>
            </tr>
            <tr>
              <td>Long Throws</td>
              <td class="attribute <%= attribute_class(@player.long_throw) %>"><%= @player.long_throw %></td>
            </tr>
            <tr>
              <td>Marking</td>
              <td class="attribute <%= attribute_class(@player.marking) %>"><%= @player.marking %></td>
            </tr>
            <tr>
              <td>Passing</td>
              <td class="attribute <%= attribute_class(@player.passing) %>"><%= @player.passing %></td>
            </tr>
            <tr>
              <td>Penalty Taking</td>
              <td class="attribute <%= attribute_class(@player.penalty_taking) %>"><%= @player.penalty_taking %></td>
            </tr>
            <tr>
