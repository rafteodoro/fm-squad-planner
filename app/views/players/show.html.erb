          </tr>
          <tr>
            <td>Dirtiness</td>
            <td class="attribute <%= reverse_attribute_class(@player.h_dirtiness) %>"><%= @player.h_dirtiness %></td>
          </tr>
          <tr>
            <td>Important Matches</td>
            <td class="attribute <%= attribute_class(@player.h_important_matches) %>"><%= @player.h_important_matches %></td>
          </tr>
          <tr>
            <td>Injury Proneness</td>
            <td class="attribute <%= reverse_attribute_class(@player.h_injury_proneness) %>"><%= @player.h_injury_proneness %></td>
