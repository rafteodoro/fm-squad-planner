<div class="container">
  <h1><%= @tactic.name %></h1>
  <%= link_to 'back', tactics_path, class:"btn btn-sm btn-secondary" %>
  <%= link_to 'add position', new_tactic_position_path(@tactic), class:"btn btn-sm btn-primary" %>
  <%= link_to 'evaluate!', evaluate_tactic_path(@tactic), class:"btn btn-sm btn-success" %>
  <%= link_to 'delete', tactic_path(@tactic), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class:"btn btn-sm btn-danger"  %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Position</th>
        <th scope="col">Role</th>
        <th scope="col">Mentality</th>
      </tr>
    </thead>
    <tbody>
      <% @positions.each do |position|%>
        <tr>
          <td>
            <%= link_to position_path(position) do %>
              <h5><%= position.name %></h5>
            <% end %>
          </td>
          <td><%= position.role %></td>
          <td><%= position.mentality %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
